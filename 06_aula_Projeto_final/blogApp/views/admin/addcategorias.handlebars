{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>

    {{else}}
{{/each}}
<h3>Nova Categoria</h3>
<form action="/admin/categorias/nova" method="POST">
    <label for="nome">Name:</label>
    <input type="text" id="nome" name="nome" placeholder="Nome da categoria">

    <label for="slug">Slug:</label>
    <input type="text" id="slug" name="slug" placeholder="Nome do slug">

    <button type="submit" class="btn btn-success">Criar categoria</button>

</form>