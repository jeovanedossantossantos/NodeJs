<h2>Lista de Postagens</h2>

<hr>

<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagen</button></a>
{{!-- {{postagens}} --}}
{{#each postagens}}
    <div>
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>{{data}}</small>
        <small>{{categoria.nome}}</small><br>
        <a href="/admin/postagens/edit/{{_id}}"><button>Editar</button></a>
        
        <form action="/admin/postagem/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit">Deletar</button>

        </form>
    </div>

    {{else}}
    <h1>
        Nenhuma pposagem
    </h1>

{{/each}}