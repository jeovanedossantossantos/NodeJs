{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>

    {{else}}
{{/each}}

<h3>Editar Categoria</h3>
<form action="/admin/categorias/edit" method="POST">
<input type="hidden" nome="id" value="{{categoria._id}}">
    <label for="nome">Name:</label>
    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" value="{{categoria.nome}}">

    <label for="slug">Slug:</label>
    <input type="text" id="slug" name="slug" placeholder="Nome do slug" value="{{categoria.slug}}">

    <button type="submit" class="btn btn-success">Editar categoria</button>

</form>